---
import { Image } from 'astro:assets';

// Card.astro
export interface Props {
  title: string;
  image: ImageMetadata;
  altText: string;
  link: string;
}

const { title, image, altText, link } = Astro.props;
---

<div
  class='bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out'
>
  <a href={link} class='block'>
    <div class='relative pb-[100%]'>
      <!-- 16:9 aspect ratio -->
      <Image
        src={image}
        alt={altText}
        class='absolute top-0 left-0 w-full h-full object-cover'
      />
    </div>
    <div class='p-2'>
      <h3
        class='text-lg font-semibold text-gray-800 hover:text-blue-600 transition-colors duration-300'
      >
        {title}
      </h3>
    </div>
  </a>
</div>
