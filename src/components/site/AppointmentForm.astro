---
// AppointmentForm.astro
---

<form class='max-w-2xl mx-auto p-6 space-y-8'>
  <div class='space-y-4'>
    <!-- Date and Time Selection -->
    <div class='grid md:grid-cols-2 gap-6'>
      <div>
        <label for='date' class='block text-gray-700 font-medium mb-2'>
          Appointment Date <span class='text-red-500'>*</span>
        </label>
        <input
          type='date'
          id='date'
          name='date'
          required
          class='w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'
        />
      </div>

      <div>
        <label for='time' class='block text-gray-700 font-medium mb-2'>
          Preferred Time <span class='text-red-500'>*</span>
        </label>
        <input
          type='time'
          id='time'
          name='time'
          required
          class='w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'
        />
        <p class='text-sm text-gray-500 mt-1'>Available Mon - Sun</p>
      </div>
    </div>

    <!-- Product Selection -->
    <div>
      <label class='block text-gray-700 font-medium mb-2'>
        What would you like to purchase? <span class='text-red-500'>*</span>
      </label>
      <select
        name='product'
        required
        class='w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'
      >
        <option value=''>Select an option</option>
        <option value='mattress'>Mattress only</option>
        <option value='mattress-box'>Mattress & box</option>
        <option value='complete'>Mattress, box, frame & pillows</option>
        <option value='pillows'>Pillow(s) only</option>
        <option value='frame'>Metal Frame only</option>
      </select>
    </div>

    <!-- Size Selection -->
    <div>
      <label class='block text-gray-700 font-medium mb-2'>
        Mattress Size <span class='text-red-500'>*</span>
      </label>
      <select
        name='size'
        required
        class='w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'
      >
        <option value=''>Select a size</option>
        <option value='twin'>Twin</option>
        <option value='full'>Full</option>
        <option value='queen'>Queen</option>
        <option value='king'>King</option>
        <option value='cal-king'>California King</option>
      </select>
    </div>

    <!-- Delivery Option -->
    <div>
      <label class='block text-gray-700 font-medium mb-2'>
        Do you need delivery? <span class='text-red-500'>*</span>
      </label>
      <div class='space-y-2'>
        <label class='flex items-center'>
          <input
            type='radio'
            name='delivery'
            value='yes'
            required
            class='mr-2'
          />
          Yes
        </label>
        <label class='flex items-center'>
          <input
            type='radio'
            name='delivery'
            value='no'
            required
            class='mr-2'
          />
          No
        </label>
      </div>
    </div>

    <!-- Additional Information -->
    <div>
      <label for='notes' class='block text-gray-700 font-medium mb-2'>
        Additional Notes
      </label>
      <textarea
        id='notes'
        name='notes'
        rows='4'
        class='w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'
        placeholder="Any additional information you'd like us to know..."
      ></textarea>
    </div>
  </div>

  <button
    type='submit'
    class='w-full md:w-auto px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300'
  >
    Submit Appointment
  </button>
</form>

