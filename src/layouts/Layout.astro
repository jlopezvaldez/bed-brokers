---
import TopBar from '@components/site/TopBar.astro';
import Announcement from '@components/site/Announcement.astro';

interface Props {
  title: string;
}

import '@src/site.css';
import BottomBar from '@components/site/BottomBar.astro';
const { title = 'Phoenix Discount Mattress Store | AZ Bed Brokers' } =
  Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Welcome to Bed Brokers! Shop with us to find the best deals on premium mattresses without breaking the bank. Call or text us for appointments!'
    />
    <meta property='og:image' content='https://azbedbrokers.com/banner.png' />
    <meta name='viewport' content='width=device-width' />
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='manifest' href='/site.webmanifest' />
    <link rel='mask-icon' href='/safari-pinned-tab.svg' color='#5bbad5' />
    <meta name='msapplication-TileColor' content='#2d89ef' />
    <meta name='theme-color' content='#ffffff' />
    <meta name='generator' content={Astro.generator} />
    <link rel='canonical' href={Astro.url} />
    <script
      defer
      src='https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js'
    ></script>

    <title>{title}</title>
  </head>
  <body>
    <div class='mx-auto'>
      <Announcement />
      <TopBar />
      <slot />
      <BottomBar />
    </div>
  </body>
</html>
